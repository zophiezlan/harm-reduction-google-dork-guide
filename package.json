{
  "name": "harm-reduction-google-dork-guide",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "md:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "md:check": "markdownlint-cli2 \"**/*.md\"",
    "sort-tables": "node scripts/sort-tables.js --write",
    "sort-tables:check": "node scripts/sort-tables.js --check",
    "lint": "npm run format:check && npm run md:check && npm run sort-tables:check",
    "lint:fix": "npm run format && npm run md:fix && npm run sort-tables",
    "lint:check": "npm run format:check",
    "build": "node scripts/build-dorkbase.js",
    "build:synonyms": "node scripts/build-synonyms.js",
    "build:all": "npm run build && npm run build:synonyms",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "inject-links": "node scripts/inject-live-links.js",
    "check-links": "find . -name '*.md' -not -path './node_modules/*' -not -path './archive/*' | xargs markdown-link-check --quiet",
    "validate": "npm run lint && npm run check-links"
  },
  "devDependencies": {
    "fast-glob": "^3.3.2",
    "markdown-it-github-alerts": "^1.0.1",
    "markdownlint-cli2": "^0.16.0",
    "prettier": "^3.2.5",
    "typescript": "^5.9.3",
    "vitepress": "^1.3.1",
    "vue-tsc": "^3.2.4"
  }
}
