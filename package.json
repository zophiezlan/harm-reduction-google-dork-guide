{
  "name": "harm-reduction-google-dork-guide",
  "version": "4.0.0",
  "private": true,
  "type": "commonjs",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "md:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "md:check": "markdownlint-cli2 \"**/*.md\"",
    "sort-tables": "node scripts/sort-tables.js --write",
    "sort-tables:check": "node scripts/sort-tables.js --check",
    "lint": "npm run format:check && npm run md:check && npm run sort-tables:check",
    "lint:fix": "npm run format && npm run md:fix && npm run sort-tables",
    "lint:check": "npm run format:check",
    "build": "node scripts/build-dorkbase.js",
    "build:synonyms": "node scripts/build-synonyms.js",
    "build:all": "npm run build && npm run build:synonyms",
    "predocs:dev": "npm run build:all",
    "docs:dev": "vitepress dev docs",
    "predocs:build": "npm run build:all",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "check-links": "node scripts/check-links.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "validate": "npm run lint && npm run test:run && npm run check-links"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.0",
    "fast-glob": "^3.3.2",
    "happy-dom": "^13.0.0",
    "markdown-it-github-alerts": "^1.0.1",
    "markdownlint-cli2": "^0.16.0",
    "prettier": "^3.2.5",
    "typescript": "^5.9.3",
    "vitepress": "^1.3.1",
    "vitest": "^2.0.0",
    "vue-tsc": "^3.2.4"
  },
  "dependencies": {
    "@tsparticles/engine": "^3.9.1",
    "@tsparticles/slim": "^3.9.1",
    "@tsparticles/vue3": "^3.0.1"
  }
}
